<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:textColor="@color/buttonText"
        android:background="@color/buttonBackground"
        android:textSize="18dp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/residentNearByComposter"
        android:layout_marginBottom="3dp"
        />

    <fragment android:name="com.cs442.group10.compost_crossing.resident.nearByComposter.NearByComposterFragment"
        android:id="@+id/ResidentNearByComposterFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <Button
        android:id="@+id/backButtonResidentNearByComposterPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/buttonBackground"
        android:text="@string/back"
        android:textSize="16dp"
        android:textColor="@color/buttonText"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        />

</LinearLayout>