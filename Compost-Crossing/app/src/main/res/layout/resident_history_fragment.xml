<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    >

    <ImageView
        android:id="@+id/imageResidentHistoryPage"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        >

        <TextView
            android:id="@+id/AdTitleResidentHistoryPage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#F000"
            android:paddingTop="4dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/CompostBoughtByHistoryPage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#F000"
            android:textSize="16dp"
            android:scrollbars="vertical"
            android:paddingTop="4dp"
            android:fadingEdge="vertical"
            android:textAlignment="center"
            android:scaleType="fitCenter"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/AdTitleResidentHistoryPage" />

        <TextView
            android:id="@+id/CompostWeightResidentHistoryPage"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:paddingTop="4dp"
            android:textColor="#F000"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/CompostBoughtByHistoryPage"
            />

        <TextView
            android:id="@+id/AdCostResidentHistoryPage"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="#F000"
            android:textSize="16dp"
            android:scrollbars="vertical"
            android:paddingTop="4dp"
            android:fadingEdge="vertical"
            android:textAlignment="center"
            android:scaleType="fitCenter"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/CompostWeightResidentHistoryPage" />

    </RelativeLayout>

</LinearLayout>