<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/composterImg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/composterName"
        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:text="John Sebastien"
        android:gravity="center"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/composterAddrLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Address"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_weight="0.03"
            android:gravity="center|start" />
        <TextView
            android:id="@+id/composterAddr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:text="This is Dummy Address"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/composterPhNoLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Phone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center|start"
            android:textAlignment="textStart"
            android:layout_weight="0.94" />
        <TextView
            android:id="@+id/composterPhNo"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:text="1234444555"
            android:gravity="center|start"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/compostDetailsLabel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Compost Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center|start" />

        <TextView
            android:id="@+id/compostDetails"
            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="Weight: 20 pounds\nCost:$1/pound\nDrop:Available"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="bottom|left"
        android:text="Back"
        android:onClick="invokePickupInfoActivity"/>

</LinearLayout>