<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/composter_item_list_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false">

    <ImageView
        android:id="@+id/compostImageCompostItemPage"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="120dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/compostTitleTextViewCompostPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F000"
            android:paddingTop="4dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:scaleType="center"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/compostWeightTextViewCompostPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:paddingTop="4dp"
            android:textColor="#F000"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/compostTitleTextViewCompostPage"
            />

        <TextView
            android:id="@+id/compostCostTextViewCompostPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F000"
            android:textSize="16dp"
            android:scrollbars="vertical"
            android:paddingTop="4dp"
            android:fadingEdge="vertical"
            android:textAlignment="center"
            android:scaleType="fitCenter"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/compostWeightTextViewCompostPage" />
    </RelativeLayout>
</LinearLayout>