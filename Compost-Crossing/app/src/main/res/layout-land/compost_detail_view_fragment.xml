<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:weightSum="1"
    tools:context=".Composter.CompostDetailActivity"
    android:layout_width="match_parent"
    android:scrollbars="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1.53"
        android:layout_height="220dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/composterImg"
        android:layout_width="103dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:src="@mipmap/default_person_image"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/composterName"
        android:layout_width="160dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:text="John Sebastien"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/composterAddrLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center|start"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:id="@+id/composterAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3001 S King Drive,\n Illinois, Chicago - 60616"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="normal|bold"
            android:scrollbars="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="20px">
        <TextView
            android:id="@+id/composterPhNoLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center|start"
            android:textAlignment="textStart"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:id="@+id/composterPhNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1234444555"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20px">
        <TextView
            android:id="@+id/compostDetailsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compost Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center|start"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/compostDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight: 20 pounds\nCost:$1/pound\nDrop:Available"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnAcceptCompost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/buttonText"
        android:background="@color/buttonBackground"
        android:layout_centerHorizontal="true"
        android:text="@string/acceptCompost" />

    <Button
        android:id="@+id/btnBackComposterDetailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Back"
        android:textColor="@color/buttonText"
        android:background="@color/buttonBackground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="navigateBackToComposterAdsListView" />

</LinearLayout>