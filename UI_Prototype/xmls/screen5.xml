<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs442.hpatil2.mysecondapp.DisplayMessageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Compost Crossing"
        android:textAlignment="center"
        android:id="@+id/header"
        android:textSize="70px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="What do you want to do ?"
        android:textSize="25dp"
        android:paddingTop="50dp"
        android:textAlignment="center"
        android:id="@+id/textScreen5"
        android:layout_below="@+id/header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="CreateProfile"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:id="@+id/createProfileButton"
        android:layout_below="@+id/textScreen5"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/postAdAnonymousButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="15dp"
        android:text="Post Ad Anonymously"
        android:textSize="25dp"
        android:layout_below="@+id/createProfileButton"
        />
</RelativeLayout>